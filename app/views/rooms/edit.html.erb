<h1>施設情報の編集</h1>

<%= form_with(model: @room, local: true) do |form| %>
  <div>
    <%= form.label :name, '施設名' %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, '施設詳細' %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, '料金' %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :address, '住所' %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :image, '施設画像' %>
    <%= form.file_field :image %>
    <% if @room.image.present? %>
      <%= image_tag @room.image.url, alt: '施設画像' %>
    <% end %>
  </div>

  <div>
    <%= link_to 'キャンセル', rooms_path %>
    <%= form.submit '保存' %>
  </div>
<% end %>
