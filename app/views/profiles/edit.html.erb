<h1>プロフィール編集</h1>

<%= form_for @user, url: profile_path, method: :patch, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :アイコン画像 %><br />
    <% if @user.avatar.present? %>
      <%= image_tag @user.avatar.url, width: 100, height: 100 %><br />
      <%= f.hidden_field :remove_avatar, value: false %>
    <% end %>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :bio %>
  </div>

  <div class="actions">
    <%= link_to "キャンセル", profile_path, class: "button" %>
    <%= f.submit "保存" %>
  </div>

  <%= link_to 'アカウント', user_path(@user) %>
  <%= link_to 'プロフィール', profile_path %> 

<% end %>
